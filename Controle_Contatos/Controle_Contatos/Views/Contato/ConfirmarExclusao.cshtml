@model ContatoModel
@{
	ViewData["Title"] = "Controle de contatos - Confirmação Excluir";
}
<h1>Deseja Confirmar a Exclusão do Contato (@Model.Nome)?</h1>

<a class="btn btn-danger w-100" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Apagar</a>
<a role="button" class="btn btn-secondary d-block" asp-controller="Contato" asp-action="Index">Voltar</a>