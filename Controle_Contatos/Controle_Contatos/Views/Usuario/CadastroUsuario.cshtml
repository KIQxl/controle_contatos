@model UsuarioModel
@{
    ViewData["Title"] = "Controle de contatos - Cadastro de Usuários";
}

<h1>Cadastrar Usuário</h1>

<form asp-controller="Usuario" asp-action="CadastroUsuario" method="post">
    <div class="form-group">
        <label>Nome do Usuário</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Nome do Usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label>Login</label>
        <input type="text" class="form-control" asp-for="Login" placeholder="Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label>Tipo de Usuário</label>
        <select class="form-control" asp-for="Tipo" placeholder="Tipo de Usuário">
            <option>
                Selecione o tipo Usuário
            </option>
            <option value="1">
                Admin
            </option>
            <option value="2">
                Padrão
            </option>
        </select>
        @Html.ValidationMessageFor(x => x.Tipo)
    </div>

    <div class="form-group">
        <label>Senha</label>
        <input type="text" class="form-control" asp-for="Senha" placeholder="Password">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <br />

    <button type="submit" class="btn btn-primary w-100">Cadastrar usuário</button>
    <a role="button" class="btn btn-secondary d-block" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>