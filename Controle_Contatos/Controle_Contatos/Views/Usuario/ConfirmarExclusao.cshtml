@model UsuarioModel
@{
	ViewData["Title"] = "Controle de contatos - Confirmação Excluir Usuário";
}
<h1>Deseja Confirmar a Exclusão do Usuário (@Model.Nome)?</h1>

<a class="btn btn-danger w-100" asp-controller="Usuario" asp-action="Deletar" asp-route-id="@Model.Id">Apagar</a>
<a role="button" class="btn btn-secondary d-block" asp-controller="Usuario" asp-action="Index">Voltar</a>